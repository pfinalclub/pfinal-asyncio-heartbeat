{
    "name": "pfinalclub/pfinal-asyncio-heartbeat",
    "description": "百万节点心跳总线 - 基于 pfinal-asyncio 的 TCP multiplex + channel 调度系统",
    "type": "library",
    "keywords": ["heartbeat", "asyncio", "tcp", "multiplexing", "channel", "workerman", "fiber"],
    "license": "MIT",
    "authors": [
        {
            "name": "PFinal Club",
            "email": "lampxiezi@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "pfinalclub/asyncio": "^2.0",
        "workerman/workerman": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "PfinalClub\\AsyncioHeartbeat\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PfinalClub\\AsyncioHeartbeat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests --level=8"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

